// 清掉冲突样式
h1,h2,h3,h4,h5 
	margin-top: 2rem !important;
	padding-top: 0rem !important;
	margin-bottom: 1rem !important;
	
// h2 底部一条分割线，不用改
// h3 左边加竖线
h3 
  margin: 1.6em auto 1.2em;
  //padding-left: 6px;
  font-size: 1.35rem;
  line-height: 1.43;

h3:before
	content: ''
	height: 2rem
	width: 6px
	display: inline-block;
	vertical-align: middle;
	background-color: var(--textLightenColor);
	//border-left: 6px solid var(--textLightenColor);
	margin-bottom: .18em;
	margin-right: 8px 


