/*
 * @name: bilibili外链播放器的样式
 *
 * @year: 2020.11.16
 * @discription: 使用时html需要<div class="btv"><iframe></div>
 *
*/

.btv {
	position: relative;
	width: 100%;
	height: 0;
	padding-bottom: 75%;
}
    
.btv iframe {
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
}

